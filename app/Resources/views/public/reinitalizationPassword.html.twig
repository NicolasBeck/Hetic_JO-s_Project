{% extends "@Public/layout.html.twig" %}

{% block body %}
    <div class="recovery-password-content">
        <div class="main">
            <div class="title">
                <span>Réinitialisez votre mot de passe.</span>
            </div>

            <div class="form-container">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <div class="input-wrapper">
                    <div class="input-placeholder-effect">
                        {{ form_start(form ) }}
                        {{ form_widget(form) }}
                        <div class="row button-wrapper">
                            <div class="col-md-6 col-md-offset-3">
                                <input type="submit" class="blue" value="Réinitialiser" />
                            </div>
                        </div>
                        {{ form_end(form) }}
                        <div class="before-border"></div>
                    </div>
                </div>

                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}

            </div>
        </div>
    </div>

{% endblock %}