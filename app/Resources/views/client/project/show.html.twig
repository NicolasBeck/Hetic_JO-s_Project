{% extends "@Admin/project/layout.html.twig" %}

{% block body %}
    <h1>Project</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Photo pincipale</th>
                <td>{{ project.mainPicture }}</td>
            </tr>
            <tr>
                <th>autres photos</th>
                {% for subPicture in project.subPictures %}
                    <td>{{ subPicture }}</td>
                {% endfor %}
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if project.date %}{{ project.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Inprogress</th>
                <td>{% if project.inProgress %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_project_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_project_edit', { 'id': project.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(followForm) }}
            <div style="display: none">
                {{ form_widget(followForm) }}
            </div>
                <input type="submit" value="Suivre">
            {{ form_end(followForm) }}
            {{ form_start(participateForm) }}
            <div style="display: none">
                {{ form_widget(participateForm) }}
            </div>
                <input type="submit" value="Participer">
            {{ form_end(participateForm) }}
        </li>
    </ul>

{% endblock %}
